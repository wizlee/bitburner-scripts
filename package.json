{
    "name": "bitburner-typescript",
    "version": "1.0.0",
    "description": "JS/TS Scripts, Automatic Code Sync and Debugging Configurations for the programming-based incremental game - BitBurner. Forked from https://github.com/bitburner-official/vscode-template.",
    "main": "index.js",
    "scripts": {
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
        "clean": "rm -rf ./dist",
        "serve": "nodemon --ignore dist/ --exec npx ts-node --project .\\server\\tsconfig.json .\\server\\server.ts",
        "watch-ts": "npx tsc -w --preserveWatchOutput false",
        "defs": "node ./updateDefs.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wizlee/bitburner-scripts.git"
    },
    "author": "Wiz Lee",
    "bugs": {
        "url": "https://github.com/wizlee/bitburner-scripts/issues"
    },
    "homepage": "https://github.com/wizlee/bitburner-scripts#readme",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "glob": "^7.2.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/glob": "^7.2.0",
        "@types/node": "^16.4.3",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "concurrently": "^5.1.0",
        "eslint": "^7.31.0",
        "nodemon": "^2.0.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.3.5"
    }
}
